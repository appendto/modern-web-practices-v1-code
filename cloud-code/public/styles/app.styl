@font-face
	font-family: starjedi
	src: url(/assets/Starjedi.ttf)

*
	font-size 19px

html
	font-family: sans-serif
	background-color: black
	color: yellow

.body
	position: relative
	padding: 0.5em
	z-index: 0
	margin: auto
	width: 100%

header
	text-align: center

	.banner
		font-family: starjedi
		font-size: 1.8em


.column
	float: left
	min-width: 33%
	padding: 0.5em

#assigned-apprentices
	clear: both
	padding: 0.5em
	width: 100%

	table
		width: 100%

	th, td
		text-align: left
		padding: 0.2em
		margin: 0

#app-messages
	display: none
	top: 0
	left: 0
	right: 0
	height: 2.5em

	.app-message
		padding: 1em

	.error-message
		background-color: red
		color: white
		font-weight: bold

	.info-message
		background-color: greenyellow
		color: black
		font-weight: bold

	.warn-message
		background-color: yellow
		color: black
		font-weight: bold

footer
	position: absolute
	bottom: 0
	height: 2em

@media (min-width: 1281px)
	.body
		width: 60%

@media (max-width: 1280px)
	.body
		width: 75%

@media (max-width: 1024px)
	.body
		width: 100%